
@{
    ViewBag.Title = "welcome";
}

@if (Session["emailid"] != null)
{
    <h2>welcome @Session["emailid"].ToString()</h2>
    <img src="@Html.ViewData["Img"]" alt="image" height="150" width="150" />




    <h3>User Details:</h3>
    <table>
        <tr>
            <th>First Name:</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Last Name:</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>Date of Birth:</th>
            <td>@Model.DateOfBirth.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Gender:</th>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <th>Phone Number:</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th>Email Address:</th>
            <td>@Model.EmailAddress</td>
        </tr>
        <tr>
            <th>Address:</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>State:</th>
            <td>@Model.State</td>
        </tr>
        <tr>
            <th>City:</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>Username:</th>
            <td>@Model.Username</td>
        </tr>
        <tr>
            <th>Password:</th>
            <td>@Model.Password</td>
        </tr>
    </table>


    


}

<h3>Update Profile Image</h3>
<hr />
@using (Html.BeginForm("userimgchange", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input type="file" name="file" />
    <br />
    <input type="submit" value="Update Image" />

}



